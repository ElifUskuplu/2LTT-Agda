{-# OPTIONS --without-K --two-level #-}

module 2LTT.Exotypes.Unit where

open import 2LTT.Primitive 
open import 2LTT.Exotypes.Exo_Equality 

--EXO-UNIVERSE--
-----------------------------------
--Unit Exotype(⊤ᵉ)
record ⊤ᵉ : UUᵉ lzero where
     constructor starᵉ

terminal-mapᵉ : {i : Level}{A : UUᵉ i} → A → ⊤ᵉ
terminal-mapᵉ x = starᵉ 

--induction principle for exo-unit
ind-⊤ᵉ : {i : Level} (P : ⊤ᵉ → UUᵉ i) → P starᵉ → ((x : ⊤ᵉ) → P x)
ind-⊤ᵉ P p starᵉ = p

--recursion principle for exo-unit
rec-⊤ᵉ : {i : Level}{A : UUᵉ i} → A → (⊤ᵉ → A)
rec-⊤ᵉ {i} {A} b x = ind-⊤ᵉ (λ _ → A) b x

----------------------------------------------------------
--UNIVERSE--
-----------------------------------
--Unit Type(⊤)
record ⊤ : UU lzero where
     constructor star

terminal-map : {i : Level}{A : UU i} → A → ⊤
terminal-map x = star

--induction principle for exo-unit
ind-⊤ : {i : Level} (P : ⊤ → UU i) → P star → ((x : ⊤) → P x)
ind-⊤ P p star = p

--recursion principle for exo-unit
rec-⊤ : {i : Level}{A : UU i} → A → (⊤ → A)
rec-⊤ {i} {A} b x = ind-⊤ (λ _ → A) b x

----------------------------------------------------------
